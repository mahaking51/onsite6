<script>
window.onload=()=>{
    document.getElementById('inputRoll').addEventListener('keyup',function(){
        $.ajax({
                url:'/users',
                type:'GET',
                dataType:'json',
                success:(dat)=>{
                    document.getElementById('status').innerHTML="";
                        console.log();
                        roll=document.getElementById('inputRoll').value;
                        if(roll.length<9){
                            document.getElementById('status').innerHTML+="Invalid Roll No.";
                            document.getElementById('submitbut').disabled=true;
                        }
                        else{
                          document.getElementById('submitbut').disabled=false;
                          }
                        for(var i=0;i<dat.length;i++){
                            if(dat[i].roll===(roll)){
                                document.getElementById('status').innerHTML+="already registered";
                                flag=1
                                document.getElementById('submitbut').disabled=true
                            }
                        }
                        if(flag==0){
                              flag=0
                              document.getElementById('submitbut').disabled=false           
                        }

                        
                }
                
            })
})
}

